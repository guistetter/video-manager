{% extends "layout.njk" %}
{%block head%}
  <title> PortFolio </title>
 {% endblock %}
 
{% block content %}
  <div id="wrapper">
    <h1>Aulas</h1>
  </div>
  <section class="cards">
    {% for item in items %}
      <div class="card" id="{{item.id}}">
        <div class="card_image-container">
          <img src="./images/{{item.imgName}}" alt="Imagem do curso javascript">
        </div>

        <div class="card_content">
          <p>{{item.title}}</p>
        </div>

        <div class="card_info">
          <p>{{item.duration}}</p>
          <p class="card_price"> {{item.price}} </p>
        </div>
      </div>
    {% endfor %}
  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>
      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>

  <div style="margin: 30px;" id="links-footer" class="links">
    <a href="#">Facebook</a>
    <a href="#">Twitter</a>
    <a href="#">Instagram</a>
  </div>

  <script src="/scripts/modal.js"></script>
 {% endblock %}