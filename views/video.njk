{% extends "layout.njk" %}
{%block head%}
  <title> {{video.title}} </title>
 {% endblock %}
 
{% block content %}
  <div id="wrapper" class="video">
    <h1>{{video.title}}</h1>
  </div>
  
  <section class="video">

      <div class="card" id="{{video.id}}">
        <div class="card_video-container">
          <iframe src="https://www.youtube.com/embed/{{video.id}}" frameborder="0"></iframe>
        </div>

        <div class="card_content">
          <p>{{video.title}}</p>
        </div>

        <div class="card_info">
          <p>{{video.duration}}</p>
          <p class="card_price"> {{video.price}} </p>
        </div>
      </div>
  </section>

    <div style="margin: 30px;" id="links-footer" class="links">
    <a href="#">Facebook</a>
    <a href="#">Twitter</a>
    <a href="#">Instagram</a>
  </div>
  
 {% endblock %}